// Importing variables from file
@import 'variables'

body
	margin 0
	font-family: main-font
	line-height 1.35
	overflow-x hidden
	box-sizing border-box
a
	text-decoration none
	color black
ul
	list-style none

header
	position relative
			
main h1
	line-height 1
	margin 0px
	font-size 16px
	font-weight normal
	
footer
	background-color primary-color
	padding 1px
	text-align center
	color #ffffff
	border-top 12px solid secondary-color
	p
		line-height 1.4
		padding 2px
		color #d3d3d3
	span
		color #ffffff
		
label[for="nav-trigger"] 
	position absolute
	top 15px
	left 15px
	z-index 10
	width 40px
	height 40px
	cursor pointer
	background-image url("../images/iconsprite.png")
	background-position 217px -248px
	
// Start Classes //	
.banner
	background-image url('../images/truck.png')
	background-size cover
	background-repeat no-repeat
	width 100%
	height 216px
	background-position center

.products
	display flex
	align-items flex-start
	border-bottom 1px solid #D6D6D6
	margin-bottom 12px
	padding-bottom 12px

.products img
	width 49%
	
.products p
	margin 0px

.mainNav
	width 67%
	height 100%
	position: fixed
	background-color alpha(primary-color, .98)
	top 0
	left -290px
	bottom 0
	z-index 9
	margin 0px	
	a 
		color white

.desktopNav
	display flex
	flex-basis 90%
	text-align center
	
.search
	width 93%
	padding 7px
	
	&::placeholder
			opacity 0.5
				
.navigation
	position relative
	top 70px
	padding-left 0px
	margin 0px
	
	li
		position relative
		padding 20px 12px
		width 95%
		border-bottom 1px solid alpha(#efeeee , 0.25) 
		
// Selecting the first child of the ul (the input tag)
.navigation li:nth-child(1)
	padding 0px 10px 0px 0px
	width 100%
	border-bottom none

.nav-trigger
	position absolute
	clip rect(0, 0, 0, 0)

.nav-trigger:checked ~ .mainNav
	left 0px
	box-shadow 0 0 10px 0px alpha(primary-color, .98)
	overflow scroll

.nav-trigger + label, .mainNav 
	transition left 0.2s

.nav-trigger:checked ~ label[for="nav-trigger"]
	position fixed	 

.productInfo 
	h2
		font-size 20px
		font-weight 700
		margin 0px
	
	span
		font-weight bold
		
.searchDesktop
	display none
		
// SVG Section
.leftarrow
	position: relative;
	top: 7px;
	width 25px
	stroke black
	fill none
	transform rotate(180deg)
	padding-left 5px

.rightarrow
	position relative
	top 7px
	width 25px
	stroke black
	fill none
	padding-left 5px
	
.menuarrow
	position absolute
	top 18px
	right 10px
	width 25px
	stroke #d3d3d3
	stroke-width 1.5px
	fill none
	padding-left 5px
	
// End Classes //

// Start Id's //
// Turn Desktop display off
#largeNav
	display none	

#logo
	text-indent -9999px
	background-image url('../images/realtruck_horizontal.svg')
	background-repeat no-repeat
	flex-basis 60%
	margin-bottom 0px
	
#heading
	margin 12px
	
	h2
		margin 0px

#navIcon
	flex-basis: 27%

#productContainer
	display flex
	flex-direction column
	flex-wrap wrap
	margin 0px 12px

#pag ul
	display flex
	justify-content center
	padding-left 0px
	margin 0px 0px 12px 0px  

	& li
		padding 10px
		
#pages
	display none
	
#sortContainer p
	padding-left 12px
	
#Layer_1
	padding 20px 0px 0px 0px
	width 60%
	
.st0
	fill #e5e5e5

.st1
	fill #edb81e
// End SVG //


		height 465px
		
	.products
		margin-left tablet-gutter
		width 48%
		
	.mainNav
		width: 35%
		left -755px
		
	// SVG
	.rightarrow, .leftarrow
		top 0
		width 15px
		
	#productContainer
		flex-direction row
		width 100%
		bottom 90px
		margin 0px auto
	
	#sortContainer
		background-color #e5e5e5
		width 100%
		margin-bottom 12px
		position relative
		bottom 24px
	
	#activeSort
		display block
		visibility visible
		left 710px
		top -20px

	#selectContent
